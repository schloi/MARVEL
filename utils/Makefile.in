
include ../Makefile.settings

ALL = LAcartoons LAshow LAcheck LAcount LAmerge \
      LAneighbors LAindex \
      LAstats LAextract \
	  TKshow TKcombine \
	  gff2track 

have_gtk = @have_gtk@
have_hdf5 = @have_hdf5@
hdf5_inc = @HDF5_INC@
hdf5_lib = @HDF5_LIB@

ifeq ($(have_gtk), yes)
	ALL += LAexplorer
endif

ifeq ($(have_hdf5), yes)
	ALL += H5dextract
endif

ifneq ($(hdf5_inc), )
	hdf5_inc=-I @HDF5_INC@
endif

ifneq ($(hdf5_lib), )
	hdf5_lib=-L @HDF5_LIB@
endif

all: $(ALL)

install: all
	$(INSTALL_PROGRAM) -m 0755 $(ALL) $(install_bin)

clean:
	rm -rf $(ALL) *.dSYM

